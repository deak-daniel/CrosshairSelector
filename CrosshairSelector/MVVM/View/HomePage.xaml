<Page x:Class="CrosshairSelector.MVVM.View.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CrosshairSelector.MVVM.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="640"
      Title="HomePage"
      Loaded="Page_Loaded">

    <Grid Background="#09122C">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label Style="{StaticResource label}"
               Width="auto"
               Height="auto"
               FontSize="30"
               Padding="10">
            Home
        </Label>
        <StackPanel Grid.Row="1" Grid.Column="0">
            <Label Style="{StaticResource label}">
                Edit crosshairs
            </Label>
            <ListBox ItemsSource="{Binding Crosshairs, UpdateSourceTrigger=PropertyChanged}"
                     Style="{StaticResource ListBox}"
                     x:Name="CrosshairListbox">
            </ListBox>

            <DockPanel Margin="10,10,0,0">
                <Button Style="{StaticResource button}"
                        Click="Delete_Click">Delete</Button>
                
                <Button Style="{StaticResource button}"
                        Click="Edit_Click">Edit</Button>
            </DockPanel>

            <Button Style="{StaticResource button}"
                    Width="200"
                    Margin="0,10,0,10"
                    Click="Save_click">
                Save Current Config
            </Button>
            <Button Style="{StaticResource button}"
                    Width="200"
                    Margin="0,0,0,10"
                    Click="Add_click">
                Add crosshair
            </Button>
            <CheckBox Style="{StaticResource checkbox}" 
                      Width="150"
                      Height="20"
                      Content="Keyboard switching"
                      IsChecked="{Binding KeyboardSwitch, UpdateSourceTrigger=PropertyChanged}"></CheckBox>
            <CheckBox Style="{StaticResource checkbox}" 
                      Width="150"
                      Height="20"
                      Content="Mousewheel switching"
                      IsChecked="{Binding MouseSwitch, UpdateSourceTrigger=PropertyChanged}"></CheckBox>
            <CheckBox Style="{StaticResource checkbox}" 
          Width="150"
          Height="20"
          Content="Controller switching"
          IsChecked="{Binding ControllerSwitch, UpdateSourceTrigger=PropertyChanged}"></CheckBox>
        </StackPanel>


        <Label Grid.Row="0"
               Grid.Column="1"
               Padding="10"
               Content="Choose a default crosshair"
               Style="{StaticResource label}"
               FontSize="30"
               Width="auto"
               Height="auto"
               VerticalAlignment="Center"/>

        <Grid Grid.Row="2" Grid.Column="2" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>


            <Border Grid.Row="0"
                    Grid.Column="0"
                    Style="{StaticResource Tile}" 
                    MouseLeftButtonDown="Border_MouseLeftButtonDown">
                <Canvas x:Name="TopLeft">
                    
                </Canvas>
            </Border>

            <Border Grid.Row="0"
                    Grid.Column="1"
                    Style="{StaticResource Tile}" 
                    MouseLeftButtonDown="Border_MouseLeftButtonDown">
                <Canvas x:Name="TopRight">

                </Canvas>
            </Border>

            <Border Grid.Row="1"
                    Grid.Column="0"
                    Style="{StaticResource Tile}" 
                    MouseLeftButtonDown="Border_MouseLeftButtonDown">
                <Canvas x:Name="BottomLeft">

                </Canvas>
            </Border>

            <Border Grid.Row="1"
                    Grid.Column="1"
                    Style="{StaticResource Tile}" 
                    MouseLeftButtonDown="Border_MouseLeftButtonDown">
                <Canvas x:Name="BottomRight">

                </Canvas>
            </Border>

        </Grid>
        
    </Grid>
</Page>
